@page
@model Authentication_Autherization.Areas.Identity.Pages.Account.Manage.EnableAuthenticatorModel
@{
    ViewData["Title"] = "Enable Authenticator";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label>Scan the QR Code:</label>
                <img src="@Model.QRCodeImageUrl" alt="QR Code for Authenticator App" class="img-fluid" />
            </div>

            <div class="form-group">
                <label>Or manually enter this key:</label>
                <div class="alert alert-secondary">
                    @Model.SharedKey
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Input.Code"></label>
                <input asp-for="Input.Code" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Verify</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
